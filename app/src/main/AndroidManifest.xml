<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.alt_shift_cs991">

    <application
        android:name=".activities.Application"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ShiftSwapActivity"
            android:noHistory="true"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.PendingSwapsEmp"
            android:launchMode="singleInstance" />
        <activity android:name=".activities.SwapActivity"
            android:noHistory="true"
            android:launchMode="singleInstance" />
        <activity android:name=".activities.ToolbarActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.CalendarActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.RegisterActivity"
            android:noHistory="true"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.FinalShiftSwapActivity"
            android:noHistory="true"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.ManagerCalendarActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".activities.ShiftAddingActivity"
            android:launchMode="singleInstance"/>
    </application>

</manifest>
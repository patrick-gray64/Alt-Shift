    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:text="@string/calendar_info" />

        <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:compactCalendarBackgroundColor="#fff"
            app:compactCalendarCurrentDayBackgroundColor="@color/paulsneutral"
            app:compactCalendarEventIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarMultiEventIndicatorColor="@color/paddysgreen"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextColor="#000000"
            app:compactCalendarTextSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shifter_shifts"
            android:layout_width="match_parent"
            android:layout_height="339dp"
                android:layout_below="@+id/compactcalendar_view">

            </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

